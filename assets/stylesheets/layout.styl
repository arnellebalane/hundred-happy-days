.container
  width 1000px
  margin 0 auto

#header
  padding 25px 100px
  margin-bottom 25px

  nav
    float right

    a
      font normal 13px/1 "Noto Sans"
      color #333333
      border 1px solid #333333
      border-radius 3px
      padding 7px 10px
      margin-left 5px
      outline none

      &:hover
      &:focus
        color #ffffff
        background-color #333333

#main
  float left
  width 700px
  padding-right 25px

#sidebar
  float right
  width 300px

.section-header
  font-family "Existence Light"
  font-size 18px
  text-transform uppercase
  margin-bottom 15px