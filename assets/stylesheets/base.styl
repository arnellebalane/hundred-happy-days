@import "nib"

*, *:before, *:after
  box-sizing border-box

html
  height 100%

body
  height 100%
  font-family "Noto Sans", sans-serif
  color #333333

h1
  font-size 2em
  font-weight bold

h2
  font-size 1.5em
  font-weight bold

h3
  font-size 1.17em
  font-weight bold

h4
  font-size 1em

h5
  font-size 0.83em

h6
  font-size 0.67em